<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.olaven.modulist">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" package="com.google.android.gms.location.sample.locationupdates"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <!-- allowBackup: old db not kept on migration. -->
    <application
            android:name=".App"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/DefaultTheme">
        <activity android:name=".activity.ModuleListActivity">
        </activity>
        <activity
                android:name=".activity.MainActivity"
                android:label="@string/title_activity_main"
                android:theme="@style/DefaultTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
                android:name=".service.GeofenceService"
                android:enabled="true"
                android:exported="true">
        </service>

        <service
                android:name=".service.NotificationService"
                android:enabled="true"
                android:exported="true">
        </service>
    </application>

</manifest>